extends layout.pug

block content

  article.portfolio-intro
    h1 Check out my work!
    p These projects will help me earn the Treehouse Full Stack Javascript:
  article.portfolio-project-thumbs
    .projects-box.box.grid
       
    each project in projects
        .cell
        a(href= `/projects/${project.id}`)
            img.thumbnail(src=`${project.images_urls}`, alt=`${project.project_name}`)
            h5=`${project.project_name}` 